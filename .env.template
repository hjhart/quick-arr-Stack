# ============================================================
# Copy this file to .env and fill in your values.
# cp .env.template .env
# ============================================================

# -------------------------------------------------------
# SYSTEM
# -------------------------------------------------------

# Your timezone: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/Los_Angeles

# UNIX user/group IDs to run containers as. Find yours with: id $USER
PUID=1000
PGID=1000

# -------------------------------------------------------
# PATHS
# -------------------------------------------------------

# Root of this repository / where MediaCenter/config lives
# Trailing slash required.
ROOT=/home/youruser/

# Where media and downloads are stored (NAS mount, external drive, etc.)
HDDSTORAGE=/mnt/nas

# Where Plex transcodes temporary files. /dev/shm uses RAM (fast, no disk wear).
TRANSCODING_STORAGE=/dev/shm

# Where Youtarr saves downloaded YouTube videos
YOUTUBE_OUTPUT_DIR=/mnt/nas/Completed/youtube

# -------------------------------------------------------
# VPN (Private Internet Access via Gluetun)
# -------------------------------------------------------

OPENVPN_USER=your_pia_username
OPENVPN_PASSWORD=your_pia_password

# -------------------------------------------------------
# YOUTARR
# -------------------------------------------------------

AUTH_ENABLED=false
LOG_LEVEL=info

# Optional: run Youtarr as a specific user (recommended for security)
# YOUTARR_UID=1000
# YOUTARR_GID=1000

# -------------------------------------------------------
# SOULBEET
# -------------------------------------------------------

# Generate a random secret key, e.g.: openssl rand -hex 32
SOULBEET_SECRET_KEY=replace_with_a_random_secret_key

# -------------------------------------------------------
# WIREGUARD (not currently in use, kept for reference)
# -------------------------------------------------------

# Public IP of this server, or "auto" to detect automatically
SERVERURL=auto

# Number of peer configs to generate
PEERS=7
